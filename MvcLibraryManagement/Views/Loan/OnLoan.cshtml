@model MvcLibraryManagement.Models.Entity.TblMove

@{
    ViewBag.Title = "OnLoan";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px;">
        <label>Member ID</label>
        @Html.TextBoxFor(b => b.Member, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>Book ID</label>
        @Html.TextBoxFor(b => b.Book, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>Staff</label>
        @Html.TextBoxFor(b => b.Staff, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>Book purchase date</label>
        <input type="text" class="form-control" name="PurchaseDate" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px;">
        <label>Book return date</label>
        <input type="text" class="form-control" name="ReturnDate" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    <div style="margin-top:15px;">
        <button class="btn btn-info">Lend A Book</button>
    </div>
</form>


