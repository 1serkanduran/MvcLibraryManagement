@using MvcLibraryManagement.Models.Entity
@model List<TblCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Category Operation</h2>

<table class="table table-bordered">
    <tr>
        <th>Category ID</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.ID</td>
        <td>@item.Name</td>
        <td>@Html.ActionLink("Delete", "CategoryDelete", new { id = item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
        <td><a href="/Category/CategoryBring/@item.ID" class="btn btn-warning">Update</a></td>
    </tr>
    }
</table>
<a href="/Category/CategoryAdd/" class="btn btn-primary">New Category</a>
